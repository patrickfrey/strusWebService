%attr(0755, root, root) %dir %{_localstatedir}/lib/strusWebService/www/css
%attr(0755, root, root) %dir %{_localstatedir}/lib/strusWebService/www/js
%attr(0444, root, root) %{_localstatedir}/lib/strusWebService/www/*.html
